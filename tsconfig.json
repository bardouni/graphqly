{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./bundle",
    "rootDir": "./",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "preserve"
  },
  "include": [
  	"src/**/*"
  ],
  "exclude":[]
}
